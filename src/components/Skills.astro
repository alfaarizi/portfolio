---
import { skills } from '../lib/data'
---

<section id="skills" class="relative py-28">
  <div class="max-w-[900px] mx-auto px-8 lg:px-12">
    <div class="flex flex-col items-center text-center">
      <h2 class="section-title reveal">Technical <span class="text-accent">Expertise</span></h2>

      <div class="flex flex-wrap justify-center gap-x-16 gap-y-10 mt-12">
        {skills.map((skill, i) => (
          <span
            class="skill-item reveal"
            data-delay={i * 40}
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>

  <!-- Background Pattern -->
  <div class="absolute inset-0 pattern-lines pointer-events-none -z-10"></div>
</section>
