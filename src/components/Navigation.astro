<nav class="fixed top-0 left-0 right-0 z-50 bg-primary/90 backdrop-blur-sm border-b border-secondary transition-all duration-300" id="main-nav">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#home" class="font-beatrice text-4xl font-black text-foreground hover:text-accent transition-colors">
      FZ
    </a>

    <!-- Navigation Links -->
    <div class="hidden md:flex items-center gap-8">
      <a href="#experience" class="nav-link text-sm text-foreground-lighter hover:text-accent transition-colors" data-section="experience">Experience</a>
      <a href="#projects" class="nav-link text-sm text-foreground-lighter hover:text-accent transition-colors" data-section="projects">Projects</a>
      <a href="#recognitions" class="nav-link text-sm text-foreground-lighter hover:text-accent transition-colors" data-section="recognitions">Recognitions</a>
      <a href="#skills" class="nav-link text-sm text-foreground-lighter hover:text-accent transition-colors" data-section="skills">Skills</a>
      <a href="#contact" class="nav-link text-sm text-foreground-lighter hover:text-accent transition-colors" data-section="contact">Contact</a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden text-foreground"
      aria-label="Toggle menu"
    >
      <svg class="w-9 h-9" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</nav>

<!-- Mobile Menu (Outside nav for full-screen overlay) -->
<div id="mobile-menu" class="hidden fixed inset-0 bg-primary z-[100] md:hidden">
  <!-- Header with Logo and Close Button -->
  <div class="fixed top-0 left-0 right-0 px-8 py-4 flex items-center justify-between">
    <a href="#home" class="font-beatrice text-4xl font-black text-foreground hover:text-accent transition-colors">
      FZ
    </a>
    <button
      id="mobile-menu-close"
      class="text-foreground"
      aria-label="Close menu"
    >
      <svg class="w-9 h-9" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Centered Navigation -->
  <div class="h-full w-full flex flex-col items-center justify-center">
    <nav class="flex flex-col items-center justify-center space-y-10">
      <a href="#experience" class="text-xl text-foreground hover:text-accent transition-colors">Experience</a>
      <a href="#projects" class="text-xl text-foreground hover:text-accent transition-colors">Projects</a>
      <a href="#recognitions" class="text-xl text-foreground hover:text-accent transition-colors">Recognitions</a>
      <a href="#skills" class="text-xl text-foreground hover:text-accent transition-colors">Skills</a>
      <a href="#contact" class="text-xl text-foreground hover:text-accent transition-colors">Contact</a>
    </nav>
  </div>
</div>

<style>
  .nav-link.active {
    color: theme('colors.accent');
  }
</style>

<script>
  const menuButton = document.getElementById('mobile-menu-button')
  const menuCloseButton = document.getElementById('mobile-menu-close')
  const mobileMenu = document.getElementById('mobile-menu')

  const toggleMenu = (show: boolean) => {
    mobileMenu?.classList.toggle('hidden', !show)
  }

  // Menu event handlers
  menuButton?.addEventListener('click', () => toggleMenu(true))
  menuCloseButton?.addEventListener('click', () => toggleMenu(false))

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => toggleMenu(false))
  })

  // Scroll-spy navigation
  const navLinks = document.querySelectorAll('.nav-link')
  const sections = Array.from(document.querySelectorAll('section[id]'))
  const SCROLL_OFFSET = 200
  const BOTTOM_THRESHOLD = 50

  function updateNav() {
    const { scrollY, innerHeight } = window
    const { scrollHeight } = document.documentElement

    // Determine current section
    const current = scrollY + innerHeight >= scrollHeight - BOTTOM_THRESHOLD
      ? sections[sections.length - 1].id
      : sections.findLast(section => scrollY >= section.offsetTop - SCROLL_OFFSET)?.id || ''

    // Update nav links
    navLinks.forEach((link) => {
      link.classList.toggle('active', (link as HTMLElement).dataset.section === current)
    })
  }

  // Throttled scroll listener
  let ticking = false
  window.addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(() => {
        updateNav()
        ticking = false
      })
      ticking = true
    }
  })

  updateNav()
</script>
