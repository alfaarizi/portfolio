---
import { experience } from '../lib/data'
import { formatDate } from '../lib/utils'

const workExperiences = experience.filter((exp) => exp.type !== 'education')
---

<section id="experience" class="relative py-24 bg-white">
  <div class="max-w-7xl mx-auto px-8 lg:px-12">
    <div class="flex flex-col items-center">
      <h2 class="section-title mb-16">Experience</h2>

      <div class="experience-timeline">
        {
          workExperiences.map((exp) => (
            <article class="experience-item">
              <div class="experience-header">
                <h3 class="experience-position">{exp.position}</h3>
                <div class="experience-period">
                  {formatDate(exp.start_date)} â€” {formatDate(exp.end_date)}
                </div>
              </div>
              <div class="experience-company">{exp.company}</div>
              <p class="experience-description">{exp.description}</p>
            </article>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    width: 100%;
    max-width: 900px;
  }

  .experience-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .experience-position {
    font-size: 2rem;
    font-weight: 600;
    color: var(--foreground);
    line-height: 1.2;
  }

  .experience-period {
    font-size: 0.75rem;
    color: var(--foreground-light);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
    white-space: nowrap;
  }

  .experience-company {
    font-size: 1rem;
    color: var(--foreground-light);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .experience-description {
    font-size: 0.9375rem;
    color: var(--foreground-lighter);
    line-height: 1.7;
    text-align: justify;
  }

  @media (max-width: 768px) {
    .experience-timeline {
      gap: 3rem;
    }

    .experience-position {
      font-size: 1.5rem;
    }

    .experience-description {
      font-size: 0.875rem;
    }
  }
</style>
