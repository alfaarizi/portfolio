---
import { projects } from '../lib/data'
---

<section id="projects" class="relative py-24 bg-white">
  <div class="max-w-7xl mx-auto px-8 lg:px-12 xl:px-0">
    <div class="flex flex-col items-center">
      <h2 class="section-title mb-16 reveal">Projects</h2>

      <!-- Bento Grid -->
      <div class="bento-grid">
      {
        projects.map((project, i) => (
          <article
            class="bento-item group relative overflow-hidden rounded-3xl bg-[#F5F5F5] border border-gray-200 reveal"
            style={`--grid-area: ${project.gridArea};`}
            data-delay={i * 80}
          >
            {/* Image Container */}
            <div class="image-zoom-container">
              <img
                src={project.image}
                alt={project.name}
                class="w-full h-full object-cover"
                style={[
                  project.objectPosition && `object-position: ${project.objectPosition}`,
                  project.imageScale && `transform: scale(${project.imageScale})`
                ].filter(Boolean).join('; ')}
                loading="lazy"
              />
            </div>

            {/* Gradient overlay for light images */}
            {project.lightImage && (
              <div class="absolute inset-x-0 bottom-0 h-44 bg-gradient-to-t to-transparent from-gray-900/20 backdrop-blur-sm"></div>
            )}

            {/* Content */}
            <div class="relative h-full flex flex-col justify-end p-6 lg:p-8 z-20">
              <div class="space-y-2">
                <h3 class={`text-2xl lg:text-3xl font-semibold leading-tight ${project.lightImage ? 'text-foreground' : 'text-white'}`}>
                  {project.name}
                </h3>
                <p class={`text-sm leading-relaxed ${project.lightImage ? 'text-foreground-light' : 'text-white/90'}`}>
                  {project.description}
                </p>

                {/* Technologies */}
                <div class="flex flex-wrap gap-2 pt-3">
                  {project.technologies.map((tech) => (
                    <span class={`px-3 py-1 text-xs font-medium rounded-full ${project.lightImage ? 'bg-white/80 border border-gray-200 text-foreground-medium' : 'bg-white/10 backdrop-blur-md border border-white/20 text-white'}`}>
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              {/* Links */}
              <div class="flex gap-4 pt-6">
                {project.live_url && (
                  <a
                    href={project.live_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`inline-flex items-center gap-2 text-sm font-medium transition-colors ${project.lightImage ? 'text-foreground hover:text-accent' : 'text-white hover:text-white/80'}`}
                    aria-label={`View ${project.name} live`}
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    <span>View Live</span>
                  </a>
                )}
                {project.github_url && (
                  <a
                    href={project.github_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`inline-flex items-center gap-2 text-sm font-medium transition-colors ${project.lightImage ? 'text-foreground hover:text-accent' : 'text-white hover:text-white/80'}`}
                    aria-label={`View ${project.name} on GitHub`}
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    <span>GitHub</span>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))
      }
      </div>
    </div>
  </div>
</section>

<style>
  /* Desktop: 3-column bento grid with explicit positioning */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-auto-rows: 320px;
    gap: 0.75rem;
    width: 100%;
    max-width: 1180px;
  }

  .bento-item {
    grid-area: var(--grid-area);
  }

  .image-zoom-container {
    position: absolute;
    inset: 0;
    transition: transform 0.3s ease-out;
    will-change: transform;
  }

  .group:hover .image-zoom-container {
    transform: scale3d(1.02, 1.02, 1);
  }

  .backdrop-blur-sm {
    -webkit-backdrop-filter: blur(4px);
    contain: paint;
  }

  /* Mobile: Stack naturally in single column */
  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
      grid-auto-rows: 280px;
      gap: 1rem;
    }

    .bento-item {
      grid-area: auto;
    }
  }
</style>
